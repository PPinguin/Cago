<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listener"
            type="com.cago.dialogs.DialogCallback" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/_background"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            style="@style/Option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> listener.activate(@string/open)}"
            android:text="@string/open" />

        <TextView
            style="@style/Option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> listener.activate(@string/upload)}"
            android:text="@string/upload" />

        <TextView
            style="@style/Option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> listener.activate(@string/share)}"
            android:text="@string/share" />

        <TextView
            style="@style/Option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> listener.activate(@string/delete)}"
            android:text="@string/delete" />

    </LinearLayout>
    </FrameLayout>
</layout>
