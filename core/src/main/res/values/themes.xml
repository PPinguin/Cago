<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cago" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnBackground">@color/background_l</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/CustomEditText</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:fontFamily">@font/manrope</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheet.Theme</item>
        <item name="popupMenuBackground">@drawable/_background</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="background">@null</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SingleLineText" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="maxLines">1</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@null</item>
    </style>
    
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/_background</item>
    </style>

    <style name="CustomBottomSheet.Theme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="Option">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_logo</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>
    
    <style name="AccentButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:letterSpacing">.2</item>
        <item name="android:background">@drawable/_background_accent</item>
    </style>
    
</resources>